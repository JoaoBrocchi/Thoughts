<%- include('../layouts/header.ejs') %>


<div class="container">
    <% if (messages.message) { %>
        <div class="message">
            <%=messages.message%>
        </div>
        <%} else { %>
        
        <% } %>
    <div class="auth-container">
        <h2>Register </h2>
        <form action="/register" method="post">
            <div class="form-control">
                <label for="name">Nome:</label>
                <input type="name" name="name" placeholder="Digite O seu Nome" required>
            </div>
            <div class="form-control">
                <label for="email">Email:</label>
                <input type="email" name="email" placeholder="Digite O seu Email" required>
            </div>
            <div class="form-control">
                <label for="password">Senha:</label>
                <input type="password" name="password" placeholder="Digite sua Senha" required>
            </div>
            <div class="form-control">
                <label for="confirmpassword">Confirme sua Senha:</label>
                <input type="password" name="confirmpassword" placeholder="Confirme sua Senha" required>
            </div>
            <input type="submit" value="Cadastrar">
            <p>JÃ¡ tem Conta ? <a href="/login">Clique aqui</a></p>
        </form>
    </div>
</div>


